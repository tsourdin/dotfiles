set $audio_notification_script /home/thibault/.config/sway/scripts/audio_notification.sh
set $brightness_notification_script /home/thibault/.config/sway/scripts/brightness_notification.sh

# Sound control
bindsym XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+; exec $audio_notification_script
bindsym XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-; exec $audio_notification_script 
bindsym XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle; exec $audio_notification_script

# Backlight // Handled by kernel option now
set $brightnessctl_script /home/thibault/.config/sway/scripts/brightness_control.sh
bindsym XF86MonBrightnessUp exec $brightnessctl_script -u && $brightness_notification_script
bindsym XF86MonBrightnessDown exec $brightnessctl_script -d && $brightness_notification_script
